{
    "name": "wp-spaghetti/bedrock-autoloader-mu",
    "description": "Self-contained Bedrock MU-Plugin Autoloader, auto-synced daily from roots/bedrock",
    "license": "MIT",
    "type": "wordpress-muplugin",
    "keywords": [
        "wordpress",
        "bedrock",
        "autoloader",
        "mu-plugins",
        "must-use"
    ],
    "authors": [
        {
            "name": "Roots",
            "homepage": "https://roots.io/",
            "role": "Original Author"
        },
        {
            "name": "Frugan",
            "homepage": "https://github.com/frugan-dev",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/wp-spaghetti/bedrock-autoloader-mu",
    "support": {
        "issues": "https://github.com/wp-spaghetti/bedrock-autoloader-mu/issues",
        "source": "https://github.com/wp-spaghetti/bedrock-autoloader-mu"
    },
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.0 || ^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.48"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@copy-to-mu-plugins-root"
        ],
        "post-update-cmd": [
            "@copy-to-mu-plugins-root"
        ],
        "copy-to-mu-plugins-root": [
            "[ -f bedrock-autoloader.php ] && cp -f bedrock-autoloader.php ../../bedrock-autoloader.php && echo 'Copied bedrock-autoloader.php to mu-plugins root' || true"
        ]
    }
}
